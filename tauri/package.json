{
  "name": "vibetunnel-tauri",
  "version": "1.0.0",
  "description": "Tauri desktop app for VibeTunnel terminal multiplexer",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run bundle:assets && npm run bundle:css && concurrently --kill-others-on-fail \"npm run watch:css\" \"npm run watch:assets\" \"npm run bundle:client -- --watch\" \"npm run tauri:dev\"",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/bundle/output.css --watch",
    "watch:assets": "chokidar 'src/client/assets/**/*' -c 'npm run bundle:assets'",
    "clean": "node scripts/clean.js",
    "build": "npm run bundle && npm run tauri:build",
    "typecheck": "tsc --noEmit",
    "ensure:dirs": "node scripts/ensure-dirs.js",
    "bundle": "npm run clean && npm run bundle:assets && npm run bundle:css && npm run bundle:client && npm run bundle:settings",
    "bundle:assets": "node scripts/copy-assets.js",
    "bundle:css": "npm run ensure:dirs && npx tailwindcss -i ./src/input.css -o ./public/bundle/output.css --minify",
    "bundle:client": "npm run ensure:dirs && esbuild src/client/app-entry.ts --bundle --outfile=public/bundle/client-bundle.js --format=esm --sourcemap",
    "bundle:settings": "npm run ensure:dirs && esbuild src/client/settings-entry.ts --bundle --outfile=public/bundle/settings-bundle.js --format=esm --sourcemap",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.1",
    "@tauri-apps/plugin-notification": "^2.2.3",
    "@tauri-apps/plugin-process": "^2.2.2",
    "@tauri-apps/plugin-shell": "^2.2.2",
    "@xterm/headless": "^5.5.0",
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tauri-apps/cli": "^2.0.0-rc.18",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "keywords": [
    "terminal",
    "multiplexer",
    "tauri",
    "desktop"
  ],
  "author": "",
  "license": "MIT"
}