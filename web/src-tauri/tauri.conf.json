{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "VibeTunnel",
  "identifier": "com.vibetunnel.app",
  "build": {
    "beforeDevCommand": "npm run bundle",
    "devUrl": "http://localhost:8081",
    "beforeBuildCommand": "npm run bundle",
    "frontendDist": "../public"
  },
  "app": {
    "windows": [{
      "title": "VibeTunnel",
      "width": 1200,
      "height": 800,
      "resizable": true,
      "fullscreen": false,
      "decorations": true,
      "transparent": false,
      "skipTaskbar": false,
      "focus": true,
      "visible": true
    }],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' ipc: http: https: tauri: asset: ws: wss: http://localhost:* ws://localhost:*",
        "img-src": "'self' asset: http: https: data: blob: 'unsafe-inline'",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/menu-bar-icon.png",
      "icons/menu-bar-icon@2x.png",
      "icons/tray-icon.png",
      "icons/tray-icon@2x.png"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "localhost",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}